global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "webservers"
    static_configs:
      - targets:
{% for host in groups['webservers'] %}
          - "{{ host }}:9100"
          - "{{ host }}:9113"
{% endfor %}
