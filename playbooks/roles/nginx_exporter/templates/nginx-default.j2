server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    root /var/www/html;

    location / {
        try_files $uri $uri/ =404;
    }

    location /stub_status {
        stub_status on;
        allow 127.0.0.1;  # Только локально
        deny all;
    }
}
